{% extends "base.html.twig" %}

{% block content %}
    <div class="container">
        <section>
            <h1>Change password</h1>
      
            <div class="col-sm-8">
                <form class="form-horizontal" method="post" data-toggle="validator" data-disable="false" action="/settings/edit-password">
                    <div class="form-group">
                        <label for="old-password" class="control-label plain-label col-sm-4">Current password</label>
                        <div class="col-sm-8">
                            <input type="password" name="old_password" id="old-password" class="form-control" required data-required-error="Fill current password in">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="form-group"></div>

                    <div class="form-group">
                        <label for="password" class="control-label plain-label col-sm-4">New password</label>
                        <div class="col-sm-8">
                            <input type="password" name="password" id="password" class="form-control" required pattern="\S{6,}" data-required-error="Fill new password in" data-pattern-error="Password should be at least 6 non-space characters">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password-confirm" class="control-label plain-label col-sm-4">Confirm password</label>
                        <div class="col-sm-8">
                            <input type="password" name="password_confirm" id="password-confirm" class="form-control" required pattern="\S{6,}" data-error="Please confirm password" data-match="#password" data-match-error="Password and password confirmation should match">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-primary button-submit btn-lg btn-block">Save</button>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-default btn-lg btn-block" href="/settings">Cancel</a>
                        </div>                                
                    </div>
                </form>               
            </div> 
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}